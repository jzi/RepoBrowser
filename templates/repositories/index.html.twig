{% extends 'base.html.twig' %}

{% block title %}Hello RepositoriesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>
    <table class="table table-hover" data-toggle="table" data-sort-name="created_at" data-sort-order="desc">
        <thead>
            <tr>
                <th class="sortable" scope="col" data-field="name" data-sortable="true">Repository name</th>
                <th scope="col" data-field="org" data-sortable="true">Organization</th>
                <th scope="col" data-field="trust" data-sortable="true">Trust score</th>
                <th scope="col" data-field="created_at" data-sortable="true">Created at</th>
            </tr>
        </thead>
        {% for repository in repositories %}
        <tr>
            <td scope="row">{{ repository.name }}</td>
            <td scope="row">{{ repository.organization.name }}</td>
            <td scope="row">{{ repository.trustScore }}</td>
            <td scope="row">{{ repository.creationDate|date("Y-m-d") }}</td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
